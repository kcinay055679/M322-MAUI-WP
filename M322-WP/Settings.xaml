<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M322_WP.Settings"
             Title="Settings"
             ControlTemplate="{StaticResource MyControlTemplate}">
    <ScrollView Margin="20">
        <VerticalStackLayout>
            <ListView ItemsSource="{Binding SettingEntries}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label
                                Text="That's a test"
                                TextColor="Black" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                BorderColor="Gray"
                Text="Info / FAQ" 
                Clicked="NavigateInfo"
                />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
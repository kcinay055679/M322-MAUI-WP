<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M322_WP.InformationPage"
             ControlTemplate="{StaticResource MyControlTemplate}">
 
    <VerticalStackLayout Margin="50">
        <Label
            Text="FAQ"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="40"/>
        <Label
            Text="Hier könnte ihre Frage stehen."
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="10"/>
        <Label
            Text="Hier könnte ihre Antwort stehen"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="10"/>
        <Label
            Text="Input options"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="40"/>
        <Label Text="Radio button"/>
        <RadioButton/>
        <Label Text="Switch"/>
        <Switch/>
        <Label Text="Checkbox"/>
        <CheckBox/>
        <Label Text="Slider"/>
        <Slider/>
        <Label Text="Date picker"/>
        <DatePicker/>
        <Button Text="Submit"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
    
</ContentPage>